{% extends "start_page.jinja2" %}
{% block datas %}
					<div id="registerSite">
						<form action="addDesign.html" method="POST" enctype="multipart/form-data">
							<div class="col-md-12 col-sm-12 col-xs-12">
								<div class="col-md-12 col-sm-12 col-xs-12">
									<div class="col-md-offset-2 col-sm-offset-2 col-xs-2 col-md-6 col-xs-6 col-sm-6 errors">
										{% for er in errors %}
											{{ er }}
											<br>
										{% endfor %}
									</div>
								</div>
								<div class="col-md-12 col-sm-12 col-xs-12 registerInput">
									<div class="col-md-6 col-xs-6 col-sm-6">Load picture:</div>
									<div class="col-md-6 col-xs-6 col-sm-6" >
										<input type="file" class="registerInput form-control" name="picture"  accept="image/jpeg,image/png,image/gif">
									</div>
								</div>
								<div class="col-md-12 col-sm-12 col-xs-12 registerInput">
									<div class="col-md-6 col-xs-6 col-sm-">Enter name:</div>
									<div class="col-md-6 col-xs-6 col-sm-6" >
										<input type="text" class="registerInput form-control" name="name" placeholder="Name">
									</div>
								</div>
								<div class="col-md-12 col-sm-12 col-xs-12 registerInput">
									<div class="col-md-6 col-xs-6 col-sm-">Enter price:</div>
									<div class="col-md-6 col-xs-6 col-sm-6" >
										<input type="text" class="registerInput form-control" name="price" placeholder="Price">
									</div>
								</div>
								<div class="col-md-12 col-sm-12 col-xs-12 registerInput">
									<div class="col-md-6 col-xs-6 col-sm-6">Enter description:</div>
									<div class="col-md-6 col-xs-6 col-sm-6" >
										<textarea row='5' class="registerInput form-control" name="description" placeholder="Description"></textarea>
									</div>
								</div>
								<div class="col-md-12 col-sm-12 col-xs-12 registerInput">
									<div class="col-md-offset-3 col-sm-offset-3 col-xs-6 col-md-6 col-xs-6  col-sm-6">
										<input type="submit" name="register" class="registerInput form-control" value="Add">
									</div>
								</div>
							</div>
						</form>
					</div>
{% endblock %}